    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Run Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/../manage.py",
            "python": "${workspaceFolder}/../../skilltest_env/bin/python3.11",
            "args": [
                "runserver",
                "--nothreading",
                "8000"
            ],
            "django": true,
            "subProcess": true,
            "console": "integratedTerminal"
        },
    ]
}
